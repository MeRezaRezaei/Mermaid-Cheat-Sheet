%%{init: {"theme": "dark", "flowchart": {"htmlLabels": true, "curve": "basis"}} }%%
flowchart TB

    %% =================================================================================
    %% 1. ORIENTATION CONCEPTS (Text Nodes)
    %% =================================================================================
    subgraph Directions ["1. Graph Directions (Reference)"]
        direction TB
        d1["TB - Top to Bottom (Default)"]
        d2["BT - Bottom to Top"]
        d3["LR - Left to Right"]
        d4["RL - Right to Left"]
        
        d1 ~~~ d2 ~~~ d3 ~~~ d4
    end

    %% =================================================================================
    %% 2. UNIVERSAL SHAPES (Classic Syntax)
    %% =================================================================================
    subgraph Shapes ["2. Standard Node Shapes"]
        direction TB
        c1["[Square / Rectangle]"]
        c2(" (Rounded Edge) ")
        c3("([Stadium / Pill / Terminal])")
        c4[["[[Subroutine]]"]]
        c5[("[(Database / Cylinder)]")]
        c6(("((Circle))"))
        c7>"Asymmetric / Flag ]"]
        c8{"{Rhombus / Decision}"}
        c9{{"{{Hexagon}}"}}
        c10[/"[/Parallelogram Right/]"/]
        c11[\"[\Parallelogram Left\]"\]
        c12[/"[/Trapezoid\]"\]
        c13[\"[\Inv Trapezoid/]"/]
        c14((("(((Double Circle)))")))
    end

    %% =================================================================================
    %% 3. LINKS & ARROWS
    %% =================================================================================
    subgraph Links ["3. Link Styles & Connectors"]
        direction LR
        %% Basic Lines
        L1(A) --- L2(Solid)
        L3(B) -.- L4(Dotted)
        L5(C) === L6(Thick)
        
        %% Arrows
        A1(D) --> A2(Arrow)
        A3(E) --o A4(Circle)
        A5(F) --x A6(Cross)
        
        %% Multi-Direction
        M1(G) <--> M2(Bi-Directional)
        M3(H) o--o M4(Bi-Circle)
        
        %% Labels
        TX1(I) -- "Inline Label" --> TX2(J)
        TX3(K) -->|Pipe Label| TX4(L)
        
        %% Chaining
        CH1(Start) --> CH2(Mid) --> CH3(End)
    end

    %% =================================================================================
    %% 4. STYLING & CLASSES
    %% =================================================================================
    subgraph Styling ["4. Styling Examples"]
        direction TB
        
        %% Direct Inline Style
        S1[Inline Styled Node]
        style S1 fill:#f9f,stroke:#333,stroke-width:4px,color:purple
        
        %% Class Usage (See classDef at bottom)
        S2[Class Styled Node]:::myOrangeClass
        
        %% Link Styling
        S3[Link Style 0] --> S4[Link Style 1]
        linkStyle 9 stroke:#ff3,stroke-width:4px,color:red;
    end

    %% =================================================================================
    %% 5. INTERACTION & SPECIAL CHARS
    %% =================================================================================
    subgraph Extras ["5. Interaction & Syntax"]
        direction TB
        I1[Click Me - Tooltip]
        click I1 "https://mermaid.js.org" "This is a tooltip"
        
        I2["Markdown: **Bold** & *Italic*"]
        I3["Escaping: #quot;Quotes#quot; & (Parens)"]
        
        %% FontAwesome (Only works if FA is loaded in the page)
        I4[fa:fa-car Icon Support]
    end

    %% Layout Spacers (Invisible links ~~~ to organize columns)
    Directions ~~~ Shapes
    Shapes ~~~ Links
    Links ~~~ Styling
    Styling ~~~ Extras

    %% =================================================================================
    %% DEFINITIONS
    %% =================================================================================
    %% Define a custom class
    classDef myOrangeClass fill:#f96,stroke:#333,stroke-dasharray: 5 5;
