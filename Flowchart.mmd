%%{init: {"theme": "neutral", "flowchart": {"htmlLabels": true, "curve": "basis"}} }%%
flowchart TB

    %% =================================================================================
    %% 1. ORIENTATION
    %% =================================================================================
    subgraph Directions ["1. Graph Directions"]
        direction TB
        d1["TB - Top to Bottom"]
        d2["BT - Bottom to Top"]
        d3["LR - Left to Right"]
        d4["RL - Right to Left"]
        
        d1 ~~~ d2 ~~~ d3 ~~~ d4
    end

    %% =================================================================================
    %% 2. SHAPES (Standard Safe Syntax)
    %% =================================================================================
    subgraph Shapes ["2. Standard Node Shapes"]
        direction TB
        c1["[Square / Rectangle]"]
        c2(" (Rounded Edge) ")
        c3("([Stadium / Pill])")
        c4[["[[Subroutine]]"]]
        c5[("[(Database)]")]
        c6(("((Circle))"))
        c7>"Asymmetric / Flag ]"]
        c8{"{Rhombus / Decision}"}
        c9{{"{{Hexagon}}"}}
        c10[/"[/Parallelogram/]"/]
        c11[\"[\Trapezoid/]"/]
        c14((("(((Double Circle)))")))
    end

    %% =================================================================================
    %% 3. LINKS & ARROWS
    %% =================================================================================
    subgraph Links ["3. Link Styles & Advanced Syntax"]
        direction LR
        L1(A) --- L2(Solid)
        L3(B) -.- L4(Dotted)
        L5(C) === L6(Thick)
        
        %% Arrow Types
        A1(D) --> A2(Arrow)
        A3(E) --o A4(Circle)
        A5(F) --x A6(Cross)
        A7(G) <--> A8(Bi-Directional)
        
        %% Labels
        TX1(I) -- "Inline Label" --> TX2(J)
        TX3(K) -->|Pipe Label| TX4(L)
        
        %% Advanced: Multi-Node & Lengths
        M1(Start) --> M2(A) & M3(B) --> M4(End)
        LEN1(Near) --> LEN2(Far) ---> LEN3(Very Far)
    end

    %% =================================================================================
    %% 4. LAYOUT & FORMATTING (Crucial Utilities)
    %% =================================================================================
    subgraph Layout ["4. Layout & Text Tricks"]
        direction TB
        
        %% Line Breaks
        TEXT1["Line 1\nLine 2\nLine 3"]
        
        %% Invisible Links (Ghost Links)
        %% Use ~~~ to force position without drawing a line
        %% QUOTES ADDED below to fix the syntax error
        POS1[Node A] ~~~ POS2["Node B (Forced Below A)"]
    end

    %% =================================================================================
    %% 5. STYLING
    %% =================================================================================
    subgraph Styling ["5. Styling Examples"]
        direction TB
        S1[Inline Styled Node]
        style S1 fill:#f9f,stroke:#333,stroke-width:3px
        
        S2[Class Styled Node]:::myOrangeClass
        
        S3[Link Styled] --> S4[Target]
        linkStyle 9 stroke:red,stroke-width:4px;
    end

    %% =================================================================================
    %% 6. INTERACTION & EXTRAS
    %% =================================================================================
    subgraph Extras ["6. Interaction & Syntax"]
        direction TB
        I1[Click Me - Tooltip]
        click I1 "https://mermaid.js.org" "Tooltip Text"
        
        I2["Markdown: **Bold** & *Italic*"]
        I3["Escape: #quot;Quote#quot;"]
        I4[fa:fa-car Icon]
    end

    %% =================================================================================
    %% 7. SUBGRAPHS & NESTING
    %% =================================================================================
    subgraph Grouping ["7. Subgraphs & Nesting"]
        direction TB
        %% Notice how we can nest graphs and change direction
        subgraph Outer [Outer Box]
            direction RL
            O1[Node A] --> O2[Node B]
            
            subgraph Inner [Inner Box]
                direction TB
                I1(Top) --> I2(Bottom)
            end
        end
    end

    %% Column Layout Helpers (Using Invisible Links)
    Directions ~~~ Shapes
    Shapes ~~~ Links
    Links ~~~ Layout
    Layout ~~~ Styling
    Styling ~~~ Extras
    Extras ~~~ Grouping

    %% Class Definition
    classDef myOrangeClass fill:#f96,stroke:#333,stroke-dasharray: 5 5;
