    %% Entities
    CUSTOMER {
        string customerID
        string name
        string email
        string address
    }

    ORDER {
        int orderID
        date orderDate
        string status
    }

    PRODUCT {
        int productID
        string name
        float price
    }

    PAYMENT {
        int paymentID
        float amount
        date paymentDate
        string paymentMethod
    }

    %% Relationships
    CUSTOMER ||--o| ORDER : "places"
    ORDER ||--|{ PRODUCT : "contains"
    ORDER ||--o| PAYMENT : "paid by"
    
    %% Example Instances
    CUSTOMER {
        "123" : customerID
        "Ali" : name
        "ali@email.com" : email
        "Tehran" : address
    }
    
    ORDER {
        "789" : orderID
        "2026-01-01" : orderDate
        "Pending" : status
    }
    
    PRODUCT {
        "456" : productID
        "Laptop" : name
        "2000" : price
    }

    PAYMENT {
        "321" : paymentID
        "2000" : amount
        "2026-01-02" : paymentDate
        "Credit Card" : paymentMethod
    }

