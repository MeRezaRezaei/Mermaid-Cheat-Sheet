    }
    
    ORDER {
        int orderID
        date orderDate
        string status
        float totalAmount
    }
    
    PRODUCT {
        int productID
        string productName
        float price
        string category
    }
    
    EMPLOYEE {
        string employeeID
        string firstName
        string lastName
        string position
    }

